@model IEnumerable<ProjetoTI2_servidor.Models.Sistemas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Professor"))
    {
        @Html.ActionLink("Criar Novo Sistema", "Create")
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(x => item.Nome)
        </td>
        @if (User.Identity.Name.Equals(item.Utilizador.Username)) {
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.ID })
        </td>
        }
        
    </tr>
    }

</table>
